<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CraftMarket.AppShell"
             xmlns:views="clr-namespace:CraftMarket.Views">
    <TabBar>
        <ShellContent 
            Title="Объявления"
            ContentTemplate="{DataTemplate views:Announce}">
        </ShellContent>
        <ShellContent 
            Title="Добавить"
            ContentTemplate="{DataTemplate views:AddAnn}">
        </ShellContent>
        <ShellContent 
            Title="Личный кабинет"
            ContentTemplate="{DataTemplate views:Profile}">
        </ShellContent>
    </TabBar>
</Shell>